<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>URL Shortener</title>
    <link rel="stylesheet" href="/style.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/2.0.8/clipboard.min.js"></script>
  </head>
  <body>
    <div class="container">
      <h1>URL Shortener</h1>
      <p class="subtitle">
        Paste your long URL and get a shorter version instantly
      </p>

      <form action="/" method="post">
        <div class="input-group">
          <input
            type="url"
            name="url"
            id="url"
            placeholder="Enter your long URL here..."
            required
          />
          <button type="submit">Shorten URL</button>
        </div>

        <% if (locals.error) { %>
        <div class="error"><%= error %></div>
        <% } %>
      </form>

      <% if (locals.short_url) { %>
      <div class="result-container visible">
        <div class="short-url">
          <a href="<%= short_url %>" target="_blank"><%= short_url %></a>
          <button class="copy-btn" data-clipboard-text="<%= short_url %>">
            Copy
          </button>
        </div>
        <div class="url-stats">
          <div class="stat-item">
            <span class="stat-label">Total Clicks:</span>
            <span class="stat-value" id="click-count"
              ><%= locals.clicks %></span
            >
          </div>
          <div class="stat-item">
            <span class="stat-label">Original URL:</span>
            <span class="stat-value url-truncate"
              ><%= locals.original_url %></span
            >
          </div>
          <div class="stat-item">
            <span class="stat-label">Created:</span>
            <span class="stat-value"
              ><%= new Date(locals.created_at).toLocaleDateString() %></span
            >
          </div>
        </div>
      </div>
      <% } %>
    </div>

    <script>
      // Initialize clipboard.js
      new ClipboardJS(".copy-btn");

      // Add feedback when copying
      document
        .querySelector(".copy-btn")
        ?.addEventListener("click", function (e) {
          const originalText = e.target.textContent;
          e.target.textContent = "Copied!";
          setTimeout(() => {
            e.target.textContent = originalText;
          }, 2000);
        });

      // Real-time click count updates
      function updateClickCount() {
        const shortUrl = document
          .querySelector(".short-url a")
          ?.getAttribute("href");
        if (!shortUrl) return;

        const shortId = shortUrl.split("/").pop();
        fetch(`/api/stats/${shortId}`)
          .then((response) => response.json())
          .then((data) => {
            document.getElementById("click-count").textContent = data.clicks;
          })
          .catch(console.error);
      }

      // Update click count every 30 seconds if there's a short URL displayed
      if (document.querySelector(".short-url")) {
        setInterval(updateClickCount, 30000);
      }
    </script>
  </body>
</html>
